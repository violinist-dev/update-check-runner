{
  "name": "violinist-dev/update-check-runner",
  "description": "Runner for update checks",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "ext-json": "*",
    "cweagans/composer-patches": "^1.7",
    "eiriksm/cosy-composer": "dev-main",
    "eiriksm/gitinfo": "^4",
    "php-http/httplug": "2.x-dev",
    "symfony/dependency-injection": "^5.4",
    "symfony/dotenv": "^5.4",
    "violinist-dev/licence-check": "dev-main"
  },
  "autoload-dev": {
    "psr-4": {
      "Violinist\\UpdateCheckRunner\\Tests\\": "tests"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse tests runner.php"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpstan/phpstan-phpunit": "^1.4",
    "phpunit/phpunit": "^9",
    "stevenmaguire/oauth2-bitbucket": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "cweagans/composer-patches": true
    },
    "sort-packages": true
  },
  "extra": {
    "patches": {
      "bitbucket/client": {
        "PHP 8.4 fixes (https://github.com/BitbucketPHP/Client/pull/86)": "./patches/bitbucket-client-php-8.4.patch"
      },
      "php-http/client-common": {
        "PHP 8.4 fixes (https://github.com/php-http/client-common/pull/247)": "./patches/php-http-client-common-php-8.4.patch"
      },
      "knplabs/github-api": {
        "PHP 8.4 fixes (https://github.com/KnpLabs/php-github-api/pull/1144)": "./patches/knplabs-github-api-php-8.4.patch"
      }
    }
  }
}
